<?php

use PhpMx\Dir;
use PhpMx\File;
use PhpMx\Import;
use PhpMx\Terminal;

return new class extends Terminal {

    function __invoke()
    {
        Dir::create('middleware');
        Dir::create('routes');
        Dir::create('source/Controller');
        Dir::create('storage/assets');
        Dir::create('storage/download');

        File::copy(path(dirname(__FILE__, 1), 'index.php'), 'index.php');

        $ignore = Import::content('.env');

        if (strpos($ignore, "#phpmx-server") === false) {
            $ignore .= "\n#phpmx-server";
            $ignore .= "\nTERMINAL_URL = http://localhost:8888";
            $ignore .= "\n";
            File::create('.env', $ignore, true);
        }
    }
};
